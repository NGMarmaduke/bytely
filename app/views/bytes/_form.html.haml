= form_for(@byte) do |f|
  -if @byte.errors.any?
    .errors
      %h2
        = pluralize(@byte.errors.count, "error")
        prohibited this byte from being saved:
      %ul
        - @byte.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :full_url
    = f.text_field :full_url
  .field
    = f.label :byte
    = f.text_field :byte

  .actions
    = f.submit
