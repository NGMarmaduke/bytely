<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
  <h2>Log in</h2>
  <%= f.email_field :email, autofocus: true, required: true, class: 'form-control', placeholder: "Email address"  %>
  <%= f.password_field :password, autocomplete: "off", required: true, class: 'form-control', placeholder: "Password"  %>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>
<%= render "users/shared/links" %>
